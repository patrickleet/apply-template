{
  "name": "apply-template",
  "version": "0.0.0-development",
  "description": "use an existing repository as a template",
  "main": "index.js",
  "bin": {
    "apply-template": "./bin/apply-template"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "jest --config jest.json --coverage",
    "test:coverage": "jest --config jest.json --coverage",
    "test:watch": "jest --config jest.json --watch",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "keywords": [
    "template",
    "repo",
    "clone",
    "cp"
  ],
  "author": "pat@patscott.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickleet/meta-template/issues"
  },
  "homepage": "https://github.com/patrickleet/meta-template#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.4.1",
    "co": "^4.6.0",
    "commander": "^2.15.1",
    "concatAll": "^1.0.4",
    "debug": "^4.0.0",
    "minimist": "^1.2.0",
    "ncp": "^2.0.0",
    "promptly": "^3.0.3",
    "recursive-readdir": "^2.2.2",
    "stream-replace": "^1.0.0"
  },
  "devDependencies": {
    "commitizen": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.2.0",
    "semantic-release": "^15.8.0",
    "travis-deploy-once": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePaths": [
      "lib/",
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "lib/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickleet/meta-template.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
