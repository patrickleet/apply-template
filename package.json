{
  "name": "apply-template",
  "version": "0.0.0-development",
  "description": "use an existing repository as a template",
  "main": "./bin/apply-template",
  "bin": {
    "apply-template": "./bin/apply-template"
  },
  "scripts": {
    "commit": "git-cz",
    "codecov": "codecov",
    "test": "jest --config jest.json --coverage",
    "test:coverage": "jest --config jest.json --coverage",
    "test:watch": "jest --config jest.json --watch",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "template",
    "repo",
    "clone",
    "cp"
  ],
  "author": "pat@patscott.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickleet/meta-template/issues"
  },
  "homepage": "https://github.com/patrickleet/meta-template#readme",
  "dependencies": {
    "bluebird": "^3.7.2",
    "co": "^4.6.0",
    "concatAll": "^1.0.6",
    "debug": "^4.3.2",
    "minimist": "^1.2.5",
    "ncp": "^2.0.0",
    "promptly": "^2.2.0",
    "recursive-readdir": "^2.2.2"
  },
  "devDependencies": {
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "jest": "27.4.6",
    "semantic-release": "18.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePaths": [
      "lib/",
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "lib/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickleet/meta-template.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
